{
  "title": "Reviewer Management API",
  "description": "API endpoints for admin to manage proposal reviewers",
  "baseUrl": "/reviewer-management",
  "endpoints": [
    {
      "method": "GET",
      "path": "/reviewer-management",
      "summary": "Get proposals list for reviewer management",
      "description": "Returns list of proposals with reviewer information for admin management (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "search",
          "in": "query",
          "type": "string",
          "description": "Search by proposal title or ketua name"
        },
        {
          "name": "status",
          "in": "query",
          "type": "string",
          "description": "Filter by proposal status",
          "enum": ["pending", "ditolak", "disetujui", "revisi"]
        },
        {
          "name": "tahun",
          "in": "query",
          "type": "integer",
          "description": "Filter by year (from pkm_kalender)",
          "example": 2026
        },
        {
          "name": "has_reviewer",
          "in": "query",
          "type": "boolean",
          "description": "Filter by reviewer status (true/false)"
        },
        {
          "name": "per_page",
          "in": "query",
          "type": "integer",
          "description": "Items per page",
          "default": 15,
          "example": 15
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                    "tahun": { "type": "integer", "example": 2026 },
                    "ketua": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "name": { "type": "string", "example": "John Doe" },
                        "email": { "type": "string", "example": "john@example.com" }
                      }
                    },
                    "anggota": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 2 },
                          "name": { "type": "string", "example": "Alice Brown" },
                          "email": { "type": "string", "example": "alice@example.com" }
                        }
                      }
                    },
                    "pembimbing": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 5 },
                        "name": { "type": "string", "example": "Dr. Jane Smith" },
                        "email": { "type": "string", "example": "jane@example.com" }
                      }
                    },
                    "status": { "type": "string", "example": "menunggu pembimbing" },
                    "status_pembimbing": { "type": "string", "enum": ["pending", "ditolak", "disetujui"], "example": "pending" },
                    "status_reviewer": { "type": "string", "example": "belum_menilai" },
                    "status_admin": { "type": "string", "example": "pending" },
                    "catatan_admin": { "type": "string", "example": "Proposal sudah memenuhi syarat" },
                    "reviewers": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 10 },
                          "name": { "type": "string", "example": "Dr. Reviewer Name" },
                          "email": { "type": "string", "example": "reviewer@example.com" }
                        }
                      }
                    },
                    "total_reviewer": { "type": "integer", "example": 2 },
                    "batas_max_reviewer": { "type": "integer", "example": 3 }
                  }
                }
              },
              "meta": {
                "type": "object",
                "properties": {
                  "current_page": { "type": "integer", "example": 1 },
                  "per_page": { "type": "integer", "example": 15 },
                  "total": { "type": "integer", "example": 100 }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" }
      }
    },
    {
      "method": "GET",
      "path": "/reviewer-management/available-reviewers",
      "summary": "Get available reviewers",
      "description": "Returns list of available reviewers (users with reviewer role) that can be assigned. If proposal_id is provided, excludes reviewers already assigned to that proposal (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "proposal_id",
          "in": "query",
          "type": "integer",
          "description": "Proposal ID to exclude already assigned reviewers",
          "example": 1
        },
        {
          "name": "search",
          "in": "query",
          "type": "string",
          "description": "Search by reviewer name or email"
        },
        {
          "name": "per_page",
          "in": "query",
          "type": "integer",
          "description": "Items per page",
          "default": 50,
          "example": 50
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "example": 10 },
                    "name": { "type": "string", "example": "Dr. Reviewer Name" },
                    "email": { "type": "string", "example": "reviewer@example.com" }
                  }
                }
              },
              "meta": {
                "type": "object",
                "properties": {
                  "current_page": { "type": "integer", "example": 1 },
                  "per_page": { "type": "integer", "example": 50 },
                  "total": { "type": "integer", "example": 25 }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" }
      }
    },
    {
      "method": "POST",
      "path": "/reviewer-management/{proposal}/set-reviewers",
      "summary": "Set reviewers for proposal",
      "description": "Assign reviewers to a proposal. This will create penilaian entries for all kriteria for each reviewer (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "proposal",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "required": ["reviewer_ids"],
          "properties": {
            "reviewer_ids": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "Array of reviewer user IDs",
              "example": [10, 11, 12]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Reviewers assigned successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Reviewers assigned successfully" },
              "data": { "type": "object" }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" },
        "404": { "description": "Proposal not found" },
        "422": { "description": "Validation error" }
      }
    },
    {
      "method": "PATCH",
      "path": "/reviewer-management/{proposal}/reviewers",
      "summary": "Add reviewers to proposal",
      "description": "Add additional reviewers to a proposal. This will create penilaian entries for all kriteria for new reviewers (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "proposal",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "required": ["reviewer_ids"],
          "properties": {
            "reviewer_ids": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "Array of additional reviewer user IDs",
              "example": [13]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Reviewers added successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Reviewers added successfully" },
              "data": { "type": "object" }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" },
        "404": { "description": "Proposal not found" },
        "422": { "description": "Validation error" }
      }
    },
    {
      "method": "POST",
      "path": "/reviewer-management/{proposal}/approve",
      "summary": "Approve proposal by admin",
      "description": "Admin approves a proposal after reviewers have completed their assessment (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "proposal",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "catatan": {
              "type": "string",
              "description": "Optional notes for approval",
              "example": "Proposal sudah memenuhi syarat dan disetujui"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Proposal approved successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Proposal disetujui oleh admin" },
              "data": { "type": "object" }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" },
        "404": { "description": "Proposal not found" },
        "422": { "description": "Validation error" }
      }
    },
    {
      "method": "POST",
      "path": "/reviewer-management/{proposal}/reject",
      "summary": "Reject proposal by admin",
      "description": "Admin rejects a proposal with a note (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "proposal",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "required": ["catatan"],
          "properties": {
            "catatan": {
              "type": "string",
              "description": "Required notes for rejection",
              "example": "Proposal tidak memenuhi syarat yang ditetapkan"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Proposal rejected successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Proposal ditolak oleh admin" },
              "data": { "type": "object" }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" },
        "404": { "description": "Proposal not found" },
        "422": { "description": "Validation error" }
      }
    }
  ]
}
