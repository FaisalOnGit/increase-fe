{
  "api_info": {
    "title": "Laravel API with Sanctum - Role Management",
    "base_url": "http://103.150.91.248:9001/api",
    "authentication": "Sanctum Bearer Token",
    "content_type": "application/json"
  },
  "endpoints": [
    {
      "name": "Get All Roles",
      "method": "GET",
      "url": "/roles",
      "description": "Get list of all available roles for dropdown/selection (Admin only)",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "data": [
              {
                "id": 1,
                "name": "admin",
                "display_name": "Admin",
                "guard_name": "web"
              },
              {
                "id": 2,
                "name": "dosen",
                "display_name": "Dosen",
                "guard_name": "web"
              },
              {
                "id": 3,
                "name": "mahasiswa",
                "display_name": "Mahasiswa",
                "guard_name": "web"
              },
              {
                "id": 4,
                "name": "reviewer",
                "display_name": "Reviewer",
                "guard_name": "web"
              },
              {
                "id": 5,
                "name": "kajur",
                "display_name": "Kajur",
                "guard_name": "web"
              }
            ],
            "meta": {
              "total": 5
            }
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": false,
            "message": "Unauthenticated."
          }
        },
        {
          "status": 403,
          "description": "Forbidden - Unauthorized access",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": false,
            "message": "Unauthorized access."
          }
        }
      ]
    },
    {
      "name": "Get Role Details",
      "method": "GET",
      "url": "/roles/{name}",
      "description": "Returns detailed information about a specific role (Admin only)",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "path_params": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Role name",
          "available_values": ["admin", "reviewer", "mahasiswa", "dosen", "kajur"]
        }
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "data": {
              "id": 1,
              "name": "admin",
              "display_name": "Admin",
              "guard_name": "web",
              "users_count": 10
            }
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": false,
            "message": "Unauthenticated."
          }
        },
        {
          "status": 403,
          "description": "Forbidden - Unauthorized access",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": false,
            "message": "Unauthorized access."
          }
        },
        {
          "status": 404,
          "description": "Not Found - Role not found",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": false,
            "message": "Role not found"
          }
        }
      ]
    }
  ],
  "models": {
    "Role": {
      "id": "integer - Unique identifier",
      "name": "string - Role machine name (admin, dosen, mahasiswa, reviewer, kajur)",
      "display_name": "string - Human readable role name",
      "guard_name": "string - Guard name (web)",
      "users_count": "integer - Number of users with this role (only in detail endpoint)"
    }
  },
  "authentication_method": {
    "type": "Sanctum Tokens",
    "description": "Tokens are generated via /auth/login and must be included in Authorization header",
    "header_format": "Authorization: Bearer <token>",
    "token_endpoint": "/auth/login",
    "protected_endpoints": ["/roles/*"],
    "token_type": "Stateless",
    "revocation": "Tokens are revoked on logout",
    "access_level": "Admin only"
  },
  "general_notes": {
    "base_url": "http://103.150.91.248:9001/api",
    "content_type": "application/json",
    "access_level": "All role endpoints are Admin only",
    "available_roles": {
      "admin": "Full system access",
      "dosen": "Lecturer access",
      "mahasiswa": "Student access",
      "reviewer": "Reviewer access",
      "kajur": "Department Head access"
    },
    "error_handling": {
      "response_format": {
        "success": "boolean",
        "message": "human-readable message",
        "data": "response data (if applicable)",
        "meta": "metadata (e.g., total count)"
      }
    }
  }
}
