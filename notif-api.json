{
  "api_info": {
    "title": "Laravel API with Sanctum - Notifications",
    "base_url": "http://103.150.91.248:9001/api",
    "authentication": "Sanctum Bearer Token",
    "content_type": "application/json"
  },
  "endpoints": [
    {
      "name": "Get User Notifications",
      "method": "GET",
      "url": "/notifications",
      "description": "Returns paginated list of notifications for the authenticated user",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "query_params": {
        "per_page": {
          "type": "integer",
          "required": false,
          "description": "Number of items per page",
          "default": 15
        },
        "unread_only": {
          "type": "boolean",
          "required": false,
          "description": "Filter only unread notifications",
          "default": false
        }
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "data": [
              {
                "id": 1,
                "user_id": 1,
                "title": "New Notification",
                "message": "You have a new notification",
                "type": "info",
                "read_at": null,
                "created_at": "2023-10-01T12:00:00.000000Z",
                "updated_at": "2023-10-01T12:00:00.000000Z"
              }
            ],
            "meta": {
              "current_page": 1,
              "per_page": 15,
              "total": 50,
              "last_page": 4
            }
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "body": {
            "success": false,
            "message": "Unauthenticated"
          }
        }
      ]
    },
    {
      "name": "Mark Notification as Read",
      "method": "POST",
      "url": "/notifications/{notification}/read",
      "description": "Mark a specific notification as read",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "path_params": {
        "notification": {
          "type": "string",
          "required": true,
          "description": "Notification ID"
        }
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "message": "Notification marked as read"
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "body": {
            "success": false,
            "message": "Unauthenticated"
          }
        },
        {
          "status": 403,
          "description": "Forbidden - Notification does not belong to user",
          "body": {
            "success": false,
            "message": "This notification does not belong to you"
          }
        },
        {
          "status": 404,
          "description": "Not Found - Notification not found",
          "body": {
            "success": false,
            "message": "Notification not found"
          }
        }
      ]
    },
    {
      "name": "Mark All Notifications as Read",
      "method": "POST",
      "url": "/notifications/read-all",
      "description": "Mark all unread notifications as read for the authenticated user",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "message": "All notifications marked as read",
            "data": {
              "marked_count": 5
            }
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "body": {
            "success": false,
            "message": "Unauthenticated"
          }
        }
      ]
    },
    {
      "name": "Get Unread Notifications Count",
      "method": "GET",
      "url": "/notifications/unread-count",
      "description": "Returns the count of unread notifications for the authenticated user",
      "authentication": true,
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "responses": [
        {
          "status": 200,
          "description": "OK - Success",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "success": true,
            "data": {
              "unread_count": 5
            }
          }
        },
        {
          "status": 401,
          "description": "Unauthorized - Unauthenticated",
          "body": {
            "success": false,
            "message": "Unauthenticated"
          }
        }
      ]
    }
  ],
  "models": {
    "Notification": {
      "id": "integer - Unique identifier",
      "user_id": "integer - ID of the user who owns the notification",
      "title": "string - Notification title",
      "message": "string - Notification message content",
      "type": "string - Notification type (info, warning, success, error)",
      "read_at": "datetime|null - Timestamp when notification was marked as read",
      "created_at": "datetime - Creation timestamp",
      "updated_at": "datetime - Last update timestamp"
    }
  },
  "authentication_method": {
    "type": "Sanctum Tokens",
    "description": "Tokens are generated via /auth/login and must be included in Authorization header",
    "header_format": "Authorization: Bearer <token>",
    "token_endpoint": "/auth/login",
    "protected_endpoints": ["/notifications/*"],
    "token_type": "Stateless",
    "revocation": "Tokens are revoked on logout"
  },
  "general_notes": {
    "base_url": "http://103.150.91.248:9001/api",
    "content_type": "application/json",
    "pagination": "List endpoints support pagination with per_page parameter",
    "filtering": "Notifications can be filtered by read status using unread_only parameter",
    "error_handling": {
      "response_format": {
        "success": "boolean",
        "message": "human-readable message",
        "errors": "validation details (if applicable)",
        "data": "response data (if applicable)"
      }
    }
  }
}
