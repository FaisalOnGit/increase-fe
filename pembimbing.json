{
  "title": "Pembimbing Management API",
  "description": "API endpoints for pembimbing (dosen) to manage proposals",
  "baseUrl": "/pembimbing",
  "endpoints": [
    {
      "method": "GET",
      "path": "/pembimbing/proposals",
      "summary": "Get list of proposals assigned to pembimbing",
      "description": "Returns list of proposals where the authenticated dosen is assigned as pembimbing",
      "authentication": "required",
      "role": "dosen",
      "parameters": [
        {
          "name": "status_pembimbing",
          "in": "query",
          "type": "string",
          "description": "Filter by pembimbing status",
          "enum": ["pending", "ditolak", "disetujui"]
        },
        {
          "name": "status",
          "in": "query",
          "type": "string",
          "description": "Filter by proposal status",
          "enum": ["pending", "ditolak", "disetujui", "revisi"]
        },
        {
          "name": "tahun",
          "in": "query",
          "type": "integer",
          "description": "Filter by calendar year",
          "example": 2026
        },
        {
          "name": "search",
          "in": "query",
          "type": "string",
          "description": "Search by proposal title",
          "example": "search"
        },
        {
          "name": "per_page",
          "in": "query",
          "type": "integer",
          "description": "Items per page",
          "default": 15,
          "example": 15
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                    "ketua": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "name": { "type": "string", "example": "John Doe" },
                        "email": { "type": "string", "example": "john@example.com" }
                      }
                    },
                    "pkm": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "singkatan": { "type": "string", "example": "PKM-K" },
                        "nama": { "type": "string", "example": "Program Kreativitas Mahasiswa - Kewirausahaan" }
                      }
                    },
                    "pembimbing": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 5 },
                        "name": { "type": "string", "example": "Dr. Jane Smith" },
                        "email": { "type": "string", "example": "jane@example.com" }
                      }
                    },
                    "anggota": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 2 },
                          "name": { "type": "string", "example": "Alice Brown" },
                          "email": { "type": "string", "example": "alice@example.com" }
                        }
                      }
                    },
                    "kalender": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "tahun": { "type": "integer", "example": 2026 }
                      }
                    },
                    "status_pembimbing": { "type": "string", "enum": ["pending", "ditolak", "disetujui"], "example": "pending" },
                    "status": { "type": "string", "enum": ["pending", "ditolak", "disetujui", "revisi"], "example": "pending" },
                    "nilai_akhir": { "type": "number", "example": 85.5 },
                    "file_proposal_url": { "type": "string", "example": "http://localhost/storage/proposals/file.pdf" },
                    "created_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                    "updated_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" }
                  }
                }
              },
              "meta": {
                "type": "object",
                "properties": {
                  "current_page": { "type": "integer", "example": 1 },
                  "last_page": { "type": "integer", "example": 1 },
                  "per_page": { "type": "integer", "example": 15 },
                  "total": { "type": "integer", "example": 10 },
                  "from": { "type": "integer", "example": 1 },
                  "to": { "type": "integer", "example": 10 }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden - Not a dosen" }
      }
    },
    {
      "method": "GET",
      "path": "/pembimbing/proposals/{id}",
      "summary": "Get proposal detail",
      "description": "Get detailed information of a proposal assigned to the pembimbing",
      "authentication": "required",
      "role": "dosen",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "object",
                "properties": {
                  "informasi_usulan": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                      "jenis_pkm": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 1 },
                          "singkatan": { "type": "string", "example": "PKM-K" },
                          "nama": { "type": "string", "example": "Program Kreativitas Mahasiswa - Kewirausahaan" }
                        }
                      },
                      "tanggal": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                      "tanggal_formatted": { "type": "string", "example": "07 Feb 2026 10:30" },
                      "pembimbing": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 5 },
                          "name": { "type": "string", "example": "Dr. Jane Smith" },
                          "email": { "type": "string", "example": "jane@example.com" }
                        }
                      },
                      "status_pembimbing": { "type": "string", "example": "pending" },
                      "status": { "type": "string", "example": "pending" },
                      "file_url": { "type": "string", "example": "http://localhost/storage/proposals/file.pdf" },
                      "file_name": { "type": "string", "example": "file.pdf" },
                      "tim": {
                        "type": "object",
                        "properties": {
                          "ketua": {
                            "type": "object",
                            "properties": {
                              "id": { "type": "integer", "example": 1 },
                              "name": { "type": "string", "example": "John Doe" },
                              "email": { "type": "string", "example": "john@example.com" },
                              "role": { "type": "string", "example": "Ketua" }
                            }
                          },
                          "anggota": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": { "type": "integer", "example": 2 },
                                "name": { "type": "string", "example": "Alice Brown" },
                                "email": { "type": "string", "example": "alice@example.com" },
                                "role": { "type": "string", "example": "Anggota" }
                              }
                            }
                          },
                          "total_anggota": { "type": "integer", "example": 3 }
                        }
                      }
                    }
                  },
                  "persetujuan_pembimbing": {
                    "type": "object",
                    "properties": {
                      "status": { "type": "string", "example": "pending" },
                      "catatan": { "type": "string", "example": "Proposal sudah bagus" },
                      "is_approved": { "type": "boolean", "example": false },
                      "is_rejected": { "type": "boolean", "example": false },
                      "is_pending": { "type": "boolean", "example": true }
                    }
                  },
                  "reviewer_penilaian": {
                    "type": "object",
                    "properties": {
                      "has_reviewer": { "type": "boolean", "example": false },
                      "message": { "type": "string", "example": "Silahkan tunggu, operator sedang memilih reviewer." },
                      "reviewers": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "integer", "example": 10 },
                            "name": { "type": "string", "example": "Prof. Dr. Ahmad" },
                            "email": { "type": "string", "example": "ahmad@example.com" }
                          }
                        }
                      },
                      "total_reviewer": { "type": "integer", "example": 0 },
                      "penilaian_per_reviewer": { "type": "array", "items": { "type": "object" } },
                      "rubrik_penilaian_combined": { "type": "array", "items": { "type": "object" } },
                      "nilai_akhir": { "type": "number", "example": 85.5 },
                      "status_penilaian": { "type": "string", "example": "Disetujui" },
                      "is_approved": { "type": "boolean", "example": false },
                      "is_rejected": { "type": "boolean", "example": false }
                    }
                  },
                  "kalender": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "tahun": { "type": "integer", "example": 2026 },
                      "current_period": { "type": "string", "example": "pengajuan" }
                    }
                  },
                  "catatan_penolakan": { "type": "string", "example": "string" },
                  "created_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                  "updated_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden - Not assigned as pembimbing" },
        "404": { "description": "Proposal not found" }
      }
    },
    {
      "method": "POST",
      "path": "/pembimbing/proposals/{id}/approve",
      "summary": "Approve proposal",
      "description": "Approve a proposal assigned to the pembimbing",
      "authentication": "required",
      "role": "dosen",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "catatan": {
              "type": "string",
              "description": "Optional notes for approval",
              "example": "Proposal sudah bagus, silahkan lanjutkan"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Proposal approved successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Proposal berhasil disetujui" },
              "data": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer", "example": 1 },
                  "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                  "ketua": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "name": { "type": "string", "example": "John Doe" },
                      "email": { "type": "string", "example": "john@example.com" }
                    }
                  },
                  "pkm": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "singkatan": { "type": "string", "example": "PKM-K" },
                      "nama": { "type": "string", "example": "Program Kreativitas Mahasiswa - Kewirausahaan" }
                    }
                  },
                  "pembimbing": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 5 },
                      "name": { "type": "string", "example": "Dr. Jane Smith" },
                      "email": { "type": "string", "example": "jane@example.com" }
                    }
                  },
                  "anggota": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 2 },
                        "name": { "type": "string", "example": "Alice Brown" },
                        "email": { "type": "string", "example": "alice@example.com" }
                      }
                    }
                  },
                  "kalender": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "tahun": { "type": "integer", "example": 2026 }
                    }
                  },
                  "status_pembimbing": { "type": "string", "example": "pending" },
                  "status": { "type": "string", "example": "pending" },
                  "nilai_akhir": { "type": "number", "example": 85.5 },
                  "file_proposal_url": { "type": "string", "example": "http://localhost/storage/proposals/file.pdf" },
                  "created_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                  "updated_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" }
                }
              }
            }
          }
        },
        "400": { "description": "Bad request - Already approved/rejected" },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden - Not assigned as pembimbing" },
        "404": { "description": "Proposal not found" }
      }
    },
    {
      "method": "POST",
      "path": "/pembimbing/proposals/{id}/reject",
      "summary": "Reject proposal",
      "description": "Reject a proposal assigned to the pembimbing. Catatan is required.",
      "authentication": "required",
      "role": "dosen",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type": "integer",
          "required": true,
          "description": "Proposal ID"
        }
      ],
      "requestBody": {
        "contentType": "application/json",
        "required": true,
        "schema": {
          "type": "object",
          "required": ["catatan"],
          "properties": {
            "catatan": {
              "type": "string",
              "description": "Required notes for rejection",
              "example": "Proposal perlu perbaikan pada bagian metodologi"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Proposal rejected successfully",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "message": { "type": "string", "example": "Proposal berhasil ditolak" },
              "data": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer", "example": 1 },
                  "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                  "ketua": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "name": { "type": "string", "example": "John Doe" },
                      "email": { "type": "string", "example": "john@example.com" }
                    }
                  },
                  "pkm": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "singkatan": { "type": "string", "example": "PKM-K" },
                      "nama": { "type": "string", "example": "Program Kreativitas Mahasiswa - Kewirausahaan" }
                    }
                  },
                  "pembimbing": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 5 },
                      "name": { "type": "string", "example": "Dr. Jane Smith" },
                      "email": { "type": "string", "example": "jane@example.com" }
                    }
                  },
                  "anggota": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 2 },
                        "name": { "type": "string", "example": "Alice Brown" },
                        "email": { "type": "string", "example": "alice@example.com" }
                      }
                    }
                  },
                  "kalender": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "tahun": { "type": "integer", "example": 2026 }
                    }
                  },
                  "status_pembimbing": { "type": "string", "example": "pending" },
                  "status": { "type": "string", "example": "pending" },
                  "nilai_akhir": { "type": "number", "example": 85.5 },
                  "file_proposal_url": { "type": "string", "example": "http://localhost/storage/proposals/file.pdf" },
                  "created_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                  "updated_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" }
                }
              }
            }
          }
        },
        "400": { "description": "Bad request - Already approved/rejected or missing catatan" },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden - Not assigned as pembimbing" },
        "404": { "description": "Proposal not found" },
        "422": { "description": "Validation error" }
      }
    }
  ]
}
