    "authentication": "Sanctum Bearer Token",
    "content_type": "application/json",
    "version": "1.0.0"
  },
  "authentication_method": {
    "type": "Sanctum Tokens",
    "description": "Tokens are generated via /auth/login and must be included in Authorization header",
    "header_format": "Authorization: Bearer <token>",
    "token_endpoint": "/auth/login",
    "token_type": "Stateless",
    "revocation": "Tokens are revoked on logout"
  },
  "endpoints": {
    "authentication": [
      {
        "name": "Register User",
        "method": "POST",
        "url": "/auth/register",
        "description": "Register a new user with email and password",
        "authentication": false,
        "request_body": {
          "name": { "type": "string", "required": true, "description": "User's full name" },
          "email": { "type": "string", "required": true, "description": "User's email address" },
          "password": { "type": "string", "required": true, "min_length": 8, "description": "User's password (min 8 characters)" },
          "password_confirmation": { "type": "string", "required": true, "description": "Password confirmation (must match password)" }
        },
        "request_example": { "name": "John Doe", "email": "john.doe@example.com", "password": "password123", "password_confirmation": "password123" },
        "responses": [
          { "status": 201, "description": "Created - User registered successfully" },
          { "status": 422, "description": "Unprocessable Entity - Validation failed" }
        ]
      },
      {
        "name": "Login User",
        "method": "POST",
        "url": "/auth/login",
        "description": "Authenticate a user and return an access token",
        "authentication": false,
        "request_body": {
          "email": { "type": "string", "required": true, "description": "User's email address" },
          "password": { "type": "string", "required": true, "description": "User's password" }
        },
        "request_example": { "email": "john.doe@example.com", "password": "password123" },
        "responses": [
          { "status": 200, "description": "OK - Login successful" },
          { "status": 422, "description": "Unprocessable Entity - Invalid credentials" }
        ]
      },
      {
        "name": "Logout User",
        "method": "POST",
        "url": "/auth/logout",
        "description": "Revoke the user's current access token",
        "authentication": true,
        "responses": [
          { "status": 200, "description": "OK - Logout successful" },
          { "status": 401, "description": "Unauthorized - Unauthenticated" }
        ]
      },
      {
        "name": "Get Authenticated User",
        "method": "GET",
        "url": "/auth/user",
        "description": "Fetch the currently authenticated user",
        "authentication": true,
        "responses": [
          { "status": 200, "description": "OK - User data retrieved successfully" },
          { "status": 401, "description": "Unauthorized - Unauthenticated" }
        ]
      }
    ],
