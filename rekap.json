{
  "title": "Rekap Proposal API",
  "description": "API endpoints for admin to view proposal recap/report",
  "baseUrl": "/rekap-proposal",
  "endpoints": [
    {
      "method": "GET",
      "path": "/rekap-proposal",
      "summary": "Get proposal recap",
      "description": "Returns recap of proposals grouped by fakultas and prodi with filters (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "tahun",
          "in": "query",
          "type": "integer",
          "description": "Filter by year (from pkm_kalender)",
          "example": 2026
        },
        {
          "name": "fakultas_id",
          "in": "query",
          "type": "integer",
          "description": "Filter by fakultas ID",
          "example": 1
        },
        {
          "name": "prodi_id",
          "in": "query",
          "type": "integer",
          "description": "Filter by prodi ID",
          "example": 1
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "fakultas_id": { "type": "integer", "example": 1 },
                    "fakultas_name": { "type": "string", "example": "Fakultas Pertanian" },
                    "prodi": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "prodi_id": { "type": "integer", "example": 1 },
                          "prodi_name": { "type": "string", "example": "Agribisnis" },
                          "prodi_code": { "type": "string", "example": "54201" },
                          "jumlah_proposal": { "type": "integer", "example": 15 },
                          "jumlah_mahasiswa": { "type": "integer", "example": 45 }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" }
      }
    },
    {
      "method": "GET",
      "path": "/rekap-proposal/detail",
      "summary": "Get proposal detail by fakultas or prodi",
      "description": "Returns list of proposals filtered by fakultas or prodi (Admin only)",
      "authentication": "required",
      "role": "admin",
      "parameters": [
        {
          "name": "tahun",
          "in": "query",
          "type": "integer",
          "description": "Filter by year (from pkm_kalender)",
          "example": 2026
        },
        {
          "name": "fakultas_id",
          "in": "query",
          "type": "integer",
          "description": "Filter by fakultas ID (required if prodi_id not provided)",
          "example": 1
        },
        {
          "name": "prodi_id",
          "in": "query",
          "type": "integer",
          "description": "Filter by prodi ID",
          "example": 1
        },
        {
          "name": "status",
          "in": "query",
          "type": "string",
          "description": "Filter by proposal status",
          "enum": ["pending", "ditolak", "disetujui", "revisi"]
        },
        {
          "name": "per_page",
          "in": "query",
          "type": "integer",
          "description": "Items per page",
          "default": 15,
          "example": 15
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean", "example": true },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "judul": { "type": "string", "example": "Aplikasi Mobile untuk UMKM" },
                    "ketua": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "name": { "type": "string", "example": "John Doe" },
                        "email": { "type": "string", "example": "john@example.com" }
                      }
                    },
                    "pkm": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "singkatan": { "type": "string", "example": "PKM-K" },
                        "nama": { "type": "string", "example": "Program Kreativitas Mahasiswa - Kewirausahaan" }
                      }
                    },
                    "pembimbing": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 5 },
                        "name": { "type": "string", "example": "Dr. Jane Smith" },
                        "email": { "type": "string", "example": "jane@example.com" }
                      }
                    },
                    "anggota": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 2 },
                          "name": { "type": "string", "example": "Alice Brown" },
                          "email": { "type": "string", "example": "alice@example.com" }
                        }
                      }
                    },
                    "kalender": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "tahun": { "type": "integer", "example": 2026 }
                      }
                    },
                    "status_pembimbing": { "type": "string", "example": "pending" },
                    "status": { "type": "string", "example": "pending" },
                    "nilai_akhir": { "type": "number", "example": 85.5 },
                    "file_proposal_url": { "type": "string", "example": "http://localhost/storage/proposals/file.pdf" },
                    "created_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" },
                    "updated_at": { "type": "string", "format": "date-time", "example": "2026-02-07T10:30:00+00:00" }
                  }
                }
              },
              "meta": {
                "type": "object",
                "properties": {
                  "current_page": { "type": "integer", "example": 1 },
                  "per_page": { "type": "integer", "example": 15 },
                  "total": { "type": "integer", "example": 100 }
                }
              }
            }
          }
        },
        "401": { "description": "Unauthenticated" },
        "403": { "description": "Forbidden" },
        "422": { "description": "Validation error" }
      }
    }
  ]
}
